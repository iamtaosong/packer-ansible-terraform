{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "ap-southeast-2",
    "aws_source_ami": "ami-69631053",
    "aws_instance_type": "t2.small",
    "aws_vpc_id": "",
    "aws_subnet_id": "",
    "ami_name_prefix": "terraform-ansible",
    "terraform_version": "0.5.3"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "vpc_id": "{{user `aws_vpc_id`}}",
    "subnet_id": "{{user `aws_subnet_id`}}",
    "source_ami": "{{user `aws_source_ami`}}",
    "instance_type": "{{user `aws_instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `ami_name_prefix`}}-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/default.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/ansible.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/terraform.sh",
      "environment_vars": [
            "TERRAFORM_VERSION={{user `terraform_version`}}"
        ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ]
}
